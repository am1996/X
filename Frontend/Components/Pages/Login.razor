@page "/login"
@inject IJSRuntime JS
@using System.Net.Http.Json

<PageTitle>Login</PageTitle>

<h1>Login</h1>
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success">@message</div>
}
<p>Please enter your credentials.</p>
<div class=="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" @bind="email" class="form-control" placeholder="email" />
</div>
<br/>
<div class="form-group">
    <label for="password">Password</label>
    <input id="password" @bind="password" type="password" class="form-control" placeholder="Password" />
</div>
<br>
<button class="btn btn-primary" @onclick="ShowAlert">Login</button>

<button class="btn btn-primary" @onclick="ShowAlert">Click Me</button>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private string message = string.Empty;
    private async Task ShowAlert()
    {
        await JS.InvokeVoidAsync("alert", "Hello from Blazor!");
    }
}
